{


  "cmake.configureOnOpen": false,


  "[plaintext]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[xml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[cmake]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[cpp]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
  },


  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 16,


  "todo-tree.tree.autoRefresh": false,
  "todo-tree.highlights.defaultHighlight": {
    "type": "text-and-comment",
  },
  "todo-tree.highlights.customHighlight": {
    "FIX": {
      "fontWeight": "bold",
      "fontStyle": "italic",
      "foreground": "#FF0000",
    },
    "HERE": {
      "fontWeight": "bold",
      "fontStyle": "italic",
      "foreground": "#FFFF00",
    },
    "TODO": {
      "fontWeight": "bold",
      "fontStyle": "italic",
      "foreground": "#00FFFF",
    },
    "NOTE": {
      "fontWeight": "bold",
      "fontStyle": "italic",
      "foreground": "#00FF00",
    },
  },
  "todo-tree.general.tags": [
    "FIX",
    "HERE",
    "TODO",
    "NOTE",
  ],


  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",


}
